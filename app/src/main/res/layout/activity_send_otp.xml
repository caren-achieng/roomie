<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:fitsSystemWindows="true"
    tools:context=".SendOTPActivity">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:text="My number is"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="KE +254"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginRight="30dp"
                />

            <EditText
                android:id="@+id/inputMobile"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:hint="765438972"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"/>

        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="40sp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="270sp"
                android:background="@color/light_grey"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="160sp"
                android:layout_marginTop="-2.4dp"
                android:layout_marginEnd="95sp"
                android:background="@color/light_grey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="We will send a text with a verification code. Message and data rates may apply."
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/SendOtp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_enabled_change"
            android:text="CREATE ACCOUNT"
            android:textColor="@drawable/button_textcolor_enable"
            android:textSize="21sp"
            />

    </LinearLayout>
</ScrollView>