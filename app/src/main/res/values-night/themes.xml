<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Roomie" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_green_variant</item>
        <item name="colorOnTertiary">@color/my_green_variant_14</item>
        <item name="colorPrimaryVariant">@color/my_green_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">@color/dark</item>
        <item name="errorEnabled">@color/error</item>
        <item name="textAppearanceHeadline1">@color/white</item>
        <item name="textAppearanceBody1">@color/white</item>
        <item name="textAppearanceBody2">@color/light_grey</item>
        <item name="android:background">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/backgroundColor</item>
        <!-- Customize your theme here. -->

        <item name="colorAccent">@color/my_green_variant</item>

    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="colorOnPrimary">@color/my_green_variant</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/my_green</item>
        <item name="colorSecondaryVariant">@color/my_green</item>
        <item name="colorOnSecondary">@color/my_green</item>
        <item name="textAppearanceBody1">@color/white</item>
        <item name="textAppearanceBody2">@color/light_grey</item>
        <item name="textAppearanceButton">@color/white</item>
        <item name="textAppearanceHeadline1">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/my_green</item>
    </style>

    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>


    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorContainer">@color/my_green_variant_light</item>
        <item name="colorOnContainer">@color/my_green_variant_dark</item>
    </style>

    <style name="ThemeOverlay.Roomie.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>


</resources>