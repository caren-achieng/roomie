<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Roomie" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_green</item>
        <item name="colorOnTertiary">@color/my_green_14</item>
        <item name="colorPrimaryVariant">@color/my_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="errorEnabled">@color/error</item>
        <item name="textAppearanceHeadline1">@color/black</item>
        <item name="textAppearanceBody1">@color/black</item>
        <item name="textAppearanceBody2">@color/dark_grey</item>
        <item name="android:background">@color/white</item>
        <item name="colorControlActivated">@color/light_grey_50</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/my_green</item>
        <item name="colorSecondaryVariant">@color/my_green</item>
        <item name="colorOnSecondary">@color/my_green</item>


        <!--        color accent-->
        <item name="colorAccent">@color/my_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/backgroundColor</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="colorOnSurface">@color/my_green</item>
        <item name="colorPrimaryContainer">@color/my_green</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/my_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/my_green</item>
        <item name="colorSecondaryVariant">@color/my_green</item>
        <item name="colorOnSecondary">@color/my_green</item>
        <item name="textAppearanceBody1">@color/black</item>
        <item name="textAppearanceBody2">@color/dark_grey</item>
        <item name="textAppearanceButton">@color/white</item>
        <item name="textAppearanceHeadline1">@color/black</item>
        <item name="textAppearanceCaption">@color/dark_grey</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>


    </style>

    <style name="Theme.Login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/my_green</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorControlHighlight">@color/my_green</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>


    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorContainer">@color/my_green_light</item>
        <item name="colorOnContainer">@color/my_green_dark</item>
    </style>

    <style name="ThemeOverlay.Roomie.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>


    <style name="Theme.AddListing" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_green</item>
        <item name="colorOnTertiary">@color/my_green_14</item>
        <item name="colorPrimaryVariant">@color/my_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="errorEnabled">@color/error</item>
        <item name="textAppearanceHeadline1">@color/black</item>
        <item name="textAppearanceBody1">@color/black</item>
        <item name="textAppearanceBody2">@color/dark_grey</item>
        <item name="android:background">@color/white</item>
        <item name="colorControlActivated">@color/light_grey</item>

        <item name="android:textColorPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/my_green</item>
        <item name="colorSecondaryVariant">@color/my_green</item>
        <item name="colorOnSecondary">@color/my_green</item>


        <!--        color accent-->
        <item name="colorAccent">@color/my_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="colorOnSurface">@color/my_green</item>
        <item name="colorPrimaryContainer">@color/my_green</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

    </style>



</resources>